<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp">
    </TextView>

    <TextView
        android:id="@+id/title_content"
        android:layout_below="@id/date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/description_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/title_content"
        android:layout_alignLeft="@id/title_content"
        android:layout_alignStart="@id/title_content"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp">
    </TextView>

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp">
    </ImageButton>

    <ImageButton
        android:id="@+id/btn_remove"
        android:layout_below="@id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_remove"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp">
    </ImageButton>

</RelativeLayout>